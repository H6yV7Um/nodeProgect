<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/imgs/favicon.ico" type="image/x-icon" media="screen">
    <title>Link西安</title>

    <link rel="stylesheet" href="/less/public.css">
    <link rel="stylesheet" href="/less/index.css">
    <script src="/js/jquery-1.10.2.min.js"></script>
    <script src="/js/jQuery-File-Upload-9.12.5/js/vendor/jquery.ui.widget.js"></script>
    <script src="/js/jQuery-File-Upload-9.12.5/js/jquery.iframe-transport.js"></script>
    <script src="/js/jQuery-File-Upload-9.12.5/js/jquery.fileupload.js"></script>
</head>
<style>
    #uploadM,#uploadN{
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        opacity: 0;
    }
</style>
<body>
<div class="index">
    <div class="index-top-cnt" style="text-align: center">
        <div class="top-text"><span>Link西安审核后台</span></div>
    </div>
    <div class="bottom-cnt" style="overflow: hidden;text-align: center">
        <form action="" method="post">
        <div class="single-cnt index-area-1" style="width: 46%;float: left">
            <a href="/admin/download_marketing_exchange_info">
                <div class="text-area">
                    下载异业营销置换申请
                </div>
            </a>
        </div>
        <div class="single-cnt index-area-2" style="width: 46%;float: left;margin-top: 0">
            <a href="/admin/download_nearby_benefit_info">
                <div class="text-area">
                    下载附近优惠申请
                </div>
            </a>
        </div>
        <div class="single-cnt index-area-2" style="width: 46%;float: left;margin-top: 30px;position: relative">
            <input type="file" id="uploadM">
            <div class="text-area">
                上传轮播广告配置文件
            </div>
        </div>
        <div class="single-cnt index-area-1" style="width: 46%;float: left;margin-top: 30px;position: relative">
            <input type="file" id="uploadN">
            <div class="text-area" >
                上传附近优惠申请审核结果
            </div>
        </div>
        </form>
    </div>
</div>
</body>
</html>
<script>
    $('#uploadM').fileupload({
        dataType: 'json',
        url: "/admin/upload_pic_ads",
        acceptFileTypes: /(\.|\/)(xlsx|xls)$/i,
        maxFileSize: 2 * 1024 * 1024,
        previewMaxWidth: 180,
        previewMaxHeight: 180,
        previewCrop: true,
        done: function (e, data) {
            var ret = data.result;
            console.log(ret)
            switch (ret.error) {
                case '0':
                    alert('上传成功')
                    break;
                case '6':
                    alert('表格大小不能超过2M')
                    break;
                case '7':
                    alert('只允许上传xlsx或xls格式的表格')
                    break;
                case '8':
                    alert('上传模板不正确')
                    break;
            }
        },
        fail: function (e, data) {
            alert("上传出错了");
        }
    });
    $('#uploadN').fileupload({
        dataType: 'json',
        url: "/admin/upload_benefit_check_result",
        acceptFileTypes: /(\.|\/)(xlsx|xls)$/i,
        maxFileSize: 2 * 1024 * 1024,
        previewMaxWidth: 180,
        previewMaxHeight: 180,
        previewCrop: true,
        done: function (e, data) {
            var ret = data.result;
            console.log(ret)
            switch (ret.error) {
                case '0':
                    alert('上传成功')
                    break;
                case '6':
                    alert('表格大小不能超过2M')
                    break;
                case '7':
                    alert('只允许上传xlsx或xls格式的表格')
                    break;
                case '8':
                    alert('上传模板不正确')
                    break;
            }
        },
        fail: function (e, data) {
            alert("上传出错了");
        }
    });
</script>