        .row
            .panel-body
                .tab-content
                    #onShelvesGoods.tab-pane.active
                        section.panel
                            .panel-body
                                section#unseen
                                    table.table.table-bordered.table-striped.table-condensed
                                        thead
                                            tr
                                                th 用户名
                                                th 订单号
                                                th 提现金额
                                                th 申请提现的时间
                                                th 提现
                                        tbody
                                            tr(data-ng-repeat="x in items")
                                                td {{x.userName}}
                                                td {{x.orderNo}}
                                                td {{x.money}}
                                                td {{x.time}}
                                                td
                                                    a(href="#myModal{{$index}}",data-toggle="modal",class="btn btn-warning btn-xs") 提现
                                                    .modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', tabindex='-1',id="myModal{{$index}}")
                                                        .modal-dialog
                                                            .modal-content
                                                                .form
                                                                    form#commentForm.cmxform.form-horizontal.adminex-form(method='post',  action='')
                                                                        .modal-header
                                                                            button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                                                                            h4.modal-title 确认提现？
                                                                        .modal-body
                                                                            //弹出框内容部分
                                                                            .rejectContent
                                                                                input#orderno.form-control(name='orderno',  type='hidden', value='{{x.orderNo}}')
                                                                                input#fee.form-control(name='fee',  type='hidden', value='{{x.amount}}')
                                                                                input#useraccount.form-control(name='openid',  type='hidden', value='{{x.openid}}')
                                                                        .modal-footer
                                                                            button.btn.btn-default(type='button', data-dismiss='modal') 取消
                                                                            button#confirm.btn.btn-warning(type='button' class="okReject" onclick='paysuccess()')  确定
                                    div
                                        ul.pagination.pagination-sm
                                            li
                                                a(data-ng-click='first()') 首页
                                            li(data-ng-repeat="page in pagelist" data-ng-class='{active:isactivepage(page)}')
                                                a(data-ng-click='selectpage(page)') {{page}}
                                            li
                                                a(data-ng-click='last()') 尾页



block myScript
    script(src='/js/angular-1.5.8/angular.min.js')
    script(src='/js/myJs/page.js')
    script(type='text/javascript').
        var pagesize = !{JSON.stringify(pagesize)};
        var counturl = !{JSON.stringify(counturl)};
        var dataurl = !{JSON.stringify(dataurl)};
        page(counturl, dataurl, pagesize);
        function searchwithdraw(){
            var orderNo = $('#searchaccount').val()
            window.location.href = '/financeadmin/searchwithdraw/'+orderNo
        }
        function paysuccess(){
            $.post("/1.0/pay/gowithdraw", {
                orderno: $("#orderno").val(),
                fee: $("#fee").val(),
                openid: $("#useraccount").val(),
            }, function (data) {
                if ('0' == data.code) {
                    window.location.href = '/financeadmin/withdrawlist'
                }else{
                    $.scojs_message(data.mesg);
                    return false;
                }

            })
        }