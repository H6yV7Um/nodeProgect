block content
    div(data-ng-app="myApp",data-ng-controller="pageCtrl")
        .row
            .col-md-12
                section.panel
                    header.panel-heading.custom-tab.turquoise-tab
                        ul.topMoreNav.nav.nav-tabs
                            li
                                a(href='#') 查看所有提现&nbsp({{num}})
        //搜索框
        //.row
        //    .col-lg-4.col-lg-offset-8(style="position: relative;top:10px;")
        //        form
        //            .form-group
        //                label.col-sm-3.control-label.col-lg-3
        //                .col-lg-9
        //                    .input-group.m-bot15
        //                        input#searchaccount.form-control(type='text',placeholder="订单号",name="orderNo",autofocus='autofocus',ng-keypress="($event.which === 13)?searchwithdraw():0")
        //                        span.input-group-btn
        //                            button.btn.btn-default(type='button',onclick='searchwithdraw()') 搜索
