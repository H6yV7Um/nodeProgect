block content
    .row(ng-app="teacherAdd" ng-controller="teacherAddCtrl")
        .col-lg-12
            section.panel
                header.panel-heading
                    | 联系方式
                .panel-body
                    .form
                        form#commentForm.cmxform.form-horizontal.adminex-form(method='post',  action='/ctypeadmin/updatelink')
                            .form-group
                                label.control-label.col-lg-2(for='phone') 联系手机
                                .col-lg-6
                                    input#phone.form-control(name='phone',  type='text', value='#{phone}',required='')
                                .col-lg-offset-1.col-lg-2
                                    button.btn.btn-primary(type='submit') 提交
