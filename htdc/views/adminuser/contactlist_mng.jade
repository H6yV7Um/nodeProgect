block content
    .row(ng-app="teacherAdd" ng-controller="teacherAddCtrl")
        .col-lg-12
            section.panel
                header.panel-heading
                    | 联系方式列表
                .panel-body
                    .form
                        form#commentForm.cmxform.form-horizontal.adminex-form(method='post',  action='/login/updatelink')
                            .form-group
                                label.control-label.col-lg-2(for='officetel') 办公室(工位)联系手机
                                .col-lg-8
                                    input#officetel.form-control(name='office', data='1' type='text', value='#{officephone}',required='')
                            .form-group
                                label.control-label.col-lg-2(for='roadshow') 路演厅联系手机
                                .col-lg-8
                                    input#roadshow.form-control(name='office', data='3'  type='text', value='#{loadrowphone}',required='')
                            .form-group
                                label.control-label.col-lg-2(for='meeting') 会议室联系手机
                                .col-lg-8
                                    input#meeting.form-control(name='office', data='2'  type='text', value='#{meetingphone}',required='')
                            .form-group
                                label.control-label.col-lg-2(for='print') 打印复印预约手机
                                .col-lg-8
                                    input#print.form-control(name='office', data='7' type='text', value='#{printphone}',required='')
                            each service in services
                                .form-group
                                    label.control-label.col-lg-2 #{service.className}手机
                                    .col-lg-8
                                        input.form-control(name='office', data='#{service.classOrder}' type='text', value='#{service.linkPhone}',required='')
                            .form-group
                                .col-lg-offset-2.col-lg-10
                                    input#servicetype.form-control(name='servicetype', type='hidden', value='',required='')
                                    button.btn.btn-primary(type='button' onclick='formsubmit()') 提交
block myScript
    script(type='text/javascript', src='/js/jquery.validate.min.js')
    //script(src='/js/validation-init.js')
    //script(src='/js/jquery.validate.messages_zh.js')
    //script(type='text/javascript', src='/js/wangEditor/dist/js/wangEditor.min.js')
    script(src='/js/jquery.validate.kuku.js')
    script(src='/js/jQuery-File-Upload-9.12.5/js/jquery.iframe-transport.js')
    script(src='/js/jQuery-File-Upload-9.12.5/js/jquery.fileupload.js')
    script(src='/js/angular-1.5.8/angular.min.js')
    script(type='text/javascript').
         function formsubmit() {
             var data = []
             $("input[name='office']").each(
                     function () {
                         data.push($(this).attr("data"))
                     })

             $('#servicetype').val(JSON.stringify(data))
             $('#commentForm').submit()
         }

