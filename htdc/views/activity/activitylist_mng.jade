block leftNav
    | !{leftNav}




block content
    div(data-ng-app="myApp",data-ng-controller="pageCtrl")
        .row
            .col-md-12
                section.panel
                    header.panel-heading.custom-tab.turquoise-tab
                        ul.topMoreNav.nav.nav-tabs
                            li
                                a(href='#') 查看所有活动&nbsp({{num}})
        //搜索框
        .row
            .col-lg-4.col-lg-offset-8(style="position: relative;top:10px;")
                form
                    .form-group
                        label.col-sm-3.control-label.col-lg-3
                        .col-lg-9
                            .input-group.m-bot15
                                input#searchaccount.form-control(type='text',placeholder="活动名称",name="name",autofocus='autofocus',ng-keypress="($event.which === 13)?searchactivity():0")
                                span.input-group-btn
                                    button.btn.btn-default(type='button',onclick='searchactivity()') 搜索
                                        i.fa.fa-search
        .row
            .panel-body
                .tab-content
                    #onShelvesGoods.tab-pane.active
                        section.panel
                            .panel-body
                                section#unseen
                                    table.table.table-bordered.table-striped.table-condensed
                                        thead
                                            tr
                                                th 活动标题
                                                th 链接地址
                                                th 开始时间
                                                th 结束时间
                                                th 图片
                                                th 置顶
                                                th 操作
                                                th 删除
                                        tbody
                                            tr(data-ng-repeat="x in items",data-ng-switch="{{x.isHot}}")
                                                td {{x.name}}
                                                td {{x.linkPlace}}
                                                td {{x.startTimes}}
                                                td {{x.endTimes}}
                                                td
                                                    img(src='{{x.picUrl}}')
                                                td(data-ng-switch-when=1)
                                                    a(href="/activityadmin/canclehot/{{x._id}}/{{x.startTime}}",class="btn btn-success btn-xs") 已置顶
                                                td(data-ng-switch-when=0)
                                                    a(href="/activityadmin/hot/{{x._id}}",class="btn btn-success btn-xs") 置顶
                                                td
                                                    a(href="/activityadmin/updateactivity/{{x._id}}",class="btn btn-info btn-xs") 编辑
                                                td
                                                    //a(href = "/goodsadmin/deletegoods/{{x._id}}",class="btn btn-warning btn-xs lookImgtextBtn") 删除
                                                    a(href="#myModal{{$index}}",data-toggle="modal",class="btn btn-warning btn-xs",onclick='sms()') 删除
                                                    .modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', tabindex='-1',id="myModal{{$index}}")
                                                        .modal-dialog
                                                            .modal-content
                                                                .form
                                                                    form#commentForm.cmxform.form-horizontal.adminex-form(method='post',  action='/activityadmin/deleteactivity')
                                                                        .modal-header
                                                                            button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                                                                            h4.modal-title 确认删除？
                                                                        .modal-body
                                                                            //弹出框内容部分
                                                                            .rejectContent
                                                                                input#useraccount.form-control(name='activityid',  type='hidden', value='{{x._id}}')
                                                                        .modal-footer
                                                                            button.btn.btn-default(type='button', data-dismiss='modal') 取消
                                                                            button#confirm.btn.btn-warning(type='submit' class="okReject")  确定




                                    div
                                        ul.pagination.pagination-sm
                                            li
                                                a(data-ng-click='first()') 首页
                                            li(data-ng-repeat="page in pagelist" data-ng-class='{active:isactivepage(page)}')
                                                a(data-ng-click='selectpage(page)') {{page}}
                                            li
                                                a(data-ng-click='last()') 尾页



block myScript
    script(src='/js/angular-1.5.8/angular.min.js')
    script(src='/js/myJs/page.js')
    script(type='text/javascript').
        var pagesize = !{JSON.stringify(pagesize)};
        var counturl = !{JSON.stringify(counturl)};
        var dataurl = !{JSON.stringify(dataurl)};
        page(counturl, dataurl, pagesize);
        function searchactivity(){
            var name = $('#searchaccount').val()
            window.location.href = '/activityadmin/searchactivity/'+name
        }