        .row
            .panel-body
                .tab-content
                    #onShelvesGoods.tab-pane.active
                        section.panel
                            .panel-body
                                section#unseen
                                    table.table.table-bordered.table-striped.table-condensed
                                        thead
                                            tr
                                                th 公司名称
                                                th 公司简介
                                                th 是否注册
                                                th 查看公司详情
                                                th 是否审核
                                        tbody
                                            tr(data-ng-repeat="x in items" data-ng-switch="{{x.isCheck}}")
                                                td {{x.priseName}}
                                                td {{x.priseInfo}}
                                                td {{x.status}}
                                                td
                                                    a.btn.btn-info.btn-xs(href="/check/priseinfo/{{x._id}}") 查看公司详情
                                                td(data-ng-switch-when= "0") 未通过审核
                                                td(data-ng-switch-when= "1") 已经通过审核
                                                td(data-ng-switch-when= "2") 已删除

                                    div
                                        ul.pagination.pagination-sm
                                            li
                                                a(data-ng-click='first()') 首页
                                            li(data-ng-repeat="page in pagelist" data-ng-class='{active:isactivepage(page)}')
                                                a(data-ng-click='selectpage(page)') {{page}}
                                            li
                                                a(data-ng-click='last()') 尾页





