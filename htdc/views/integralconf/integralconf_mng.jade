block content
    .row(ng-app="goodsAdd" ng-controller="goodsAddCtrl")
        .col-lg-12
            section.panel
                header.panel-heading
                    | 积分获取
                .panel-body
                    .form
                        form#commentForm.cmxform.form-horizontal.adminex-form(method='post',  action='/integralconf/updateintegral')
                            .form-group
                                label.control-label.col-lg-2(for='goodsName') #{data.getIntegralWay[0].type}
                                .col-lg-10
                                    input#goodsName.form-control(name='firstregister',  type='text', value='#{data.getIntegralWay[0].fee}',required='',autofocus='autofocus')
                            //.form-group
                            //    label.control-label.col-lg-2(for='goodsDescribe') #{data.getIntegralWay[1].type}
                            //    .col-lg-10
                            //        input#goodsDescribe.form-control(name='getIntegralWay12',  type='text', value='#{data.getIntegralWay[1].fee}',required='',)
                            .form-group
                                label.control-label.col-lg-2(for='goodsDescribe1') #{data.getIntegralWay[2].type}
                                .col-lg-10
                                    input#goodsDescribe1.form-control(name='daysign',  type='text', value='#{data.getIntegralWay[2].fee}',required='',)
                            .form-group
                                label.control-label.col-lg-2(for='goodsDescribe2') 积分金额换算（1元=？积分）
                                .col-lg-10
                                    input#goodsDescribe2.form-control(name='fee',  type='text', value='#{data.integralFee}',required='',)
                            .form-group
                                .col-lg-offset-2.col-lg-10
                                    input#integralid.form-control(name='integralid',  type='hidden', value='#{data._id}',required='',)
                                    button.btn.btn-primary(type='button',onclick="submitform()") 提交

block myScript
    script(type='text/javascript').
        function submitform() {
            $('#commentForm').submit();
        }






