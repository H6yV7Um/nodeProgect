                        break;
                    case '7':
                        $.scojs_message('只允许上传jpg,png,gif格式的图片', $.scojs_message.TYPE_ERROR);
                        break;
                }
            },
            progressall: function (e, data) {
                var progress = parseInt(data.loaded / data.total * 80, 10);
                $('#progressbar2').css(
                        'width',
                        progress + '%'
                );
            },
            fail: function (e, data) {
