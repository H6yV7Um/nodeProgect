router.get("/checklinkedflocks/:albumId", function (req, res, next) {
	var albumId = req.params.albumId;

	var openId = req.$wxUserInfo.openId;
	FlockAlbum.find({albumId:albumId},function (err, data) {
		if (err){
			res.status(200).json(errors.error3);
		}else{
			var ids = [];
			for (var i = 0; i < data.length; i++){
				ids.push(data[i].openGId);
			}
			//查看自己的所有群信息
			Flock.find({creatorOpenId:openId},function (err1, data1) {
				if (err1){
					res.status(200).json(errors.error3);
				}else{
					var allFlocks = data1;
					console.log("所有群:");
					console.log(allFlocks);
					//查看联动的群列表
					Flock.find({openGId:{$in:ids}},function (err2, data2) {
						if (err2){
							res.status(200).json(errors.error3);
						}else{
							var linkedFlocks = data2;

							var notLinkedFlocks = allFlocks.minus(linkedFlocks);
							console.log("联动的群:");
							console.log(linkedFlocks);
							console.log("未联动的群:");
							console.log(notLinkedFlocks);
							res.status(200).json({
								error:0,
								message:'success',
								data:{
									linkedFlocks:linkedFlocks,
									notLinkedFlocks:notLinkedFlocks,
								}
							})
						}
					})
				}
			})
		}
	})
})


